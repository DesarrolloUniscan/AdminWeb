extends layout
block content
    -if (flag)
        .alert.alert-success(role="alert") #{mensaje}
        p.text-black.text-center #{error}
    -if (mensaje != undefined && !flag)
        .alert.alert-danger(role="alert") #{mensaje}
        p.text-black.text-center #{error}
    .container.col-sm-5.form-group-lg
        form.text-center.p-4.text-light.justify-content-center(action='/nuevoProducto' method='post' role='form' )
            p.h2.mb-3 NUEVO PRODUCTO
            .form-group
                label.control-label.col-sm-3(for="codigo") Código:
                input#codigo.form-control.mb-3(type='text' placeholder='Codigo' name='codigo' required)
            .form-group
                label.control-label.col-sm-3(for="nombre") Nombre:
                input#nombre.form-control.mb-3(type='text' placeholder='Nombre' name='nombre' required)
            .form-group  
                label.control-label.col-sm-3(for="descripcion") Descripción:
                textarea#descripcion.form-control.mb-3(type='text' placeholder='Descripcion' name='descripcion' cols="30", rows="5" required)
            .form-group
                label.control-label.col-sm-3(for="precio") Precio:
                input#precio.form-control.mb-5(type='number' placeholder='Precio' name='precio' min='0' max='50000'  step='0.01' required)
            .form-group
                label.control-label.col-sm-3(for="imagen") Imagen: 
                input#imagen.form-control.mb-5(type='text' placeholder='Ingrese el nombre de la imagen' name='imagen' required)

            button.btn.btn-primary.btn-block(type='submit') Enviar

